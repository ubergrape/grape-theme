#!/usr/bin/env node

var fs = require('fs')
var path = require('path')
var to5 = require('6to5-core')

var ROOT = path.resolve(__dirname, '..')
var SOURCE = path.join(ROOT, 'src')
var DIST = path.join(ROOT, 'dist')

fs.readdirSync(SOURCE).forEach(function (fileName) {
  if (path.extname(fileName) != '.js') return
  var name = path.basename(fileName, '.js')

  // Create js files
  var data = to5.transform(fs.readFileSync(path.join(SOURCE, fileName))).code
  var js = path.join(DIST, 'js', name + '.js')
  fs.writeFileSync(js, data)

  // Create json files
  var data = JSON.stringify(require(js), null, '  ')
  var json = path.join(DIST,'json', name + '.json')
  fs.writeFileSync(json, data)
})
